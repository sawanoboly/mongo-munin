#!/usr/bin/env python

## GENERATED FILE - DO NOT EDIT

import urllib2
import sys
import os

try:
    import json
except ImportError:
    import simplejson as json

portnum = int(sys.argv[0].split('_')[-1])

def getServerStatus(portnum):
    host = os.environ.get("host", "127.0.0.1")
    port = portnum
    url = "http://%s:%d/_status" % (host, port)
    req = urllib2.Request(url)
    user = os.environ.get("user")
    password = os.environ.get("password")
    if user and password:
        passwdmngr = urllib2.HTTPPasswordMgrWithDefaultRealm()
        passwdmngr.add_password(None, 'http://%s:%d' % (host, port), user, password)
        authhandler = urllib2.HTTPDigestAuthHandler(passwdmngr)
        opener = urllib2.build_opener(authhandler)
        urllib2.install_opener(opener)
    raw = urllib2.urlopen(req).read()
    return json.loads( raw )["serverStatus"]

def get(iportmun):
    return getServerStatus(portnum)["indexCounters"]["btree"]

def doData(portnum):
    for k,v in get(portnum).iteritems():
        print( str(k) + ".value " + str(int(v)) )

def doConfig(portnum):

    print "graph_title MongoDB " + str(portnum) + " btree stats"
    print "graph_args --base 1000 -l 0"
    print "graph_vlabel mb ${graph_period}"
    print "graph_category MongoDB"

    for k in get(portnum):
        print k + ".label " + k
        print k + ".min 0"
        print k + ".type COUNTER"
        print k + ".max 500000"
        print k + ".draw LINE1"






if __name__ == "__main__":
    if len(sys.argv) > 1 and sys.argv[1] == "config":
        doConfig(portnum)
    else:
        doData(portnum)


